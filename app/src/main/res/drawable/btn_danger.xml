<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="300" android:exitFadeDuration="300">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="30dp" />
            <gradient android:endColor="#FF4B2B" android:startColor="#FF416C" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="30dp" />
            <gradient android:angle="180" android:endColor="#FF4B2B" android:startColor="#FF416C" />
        </shape>
    </item>
</selector>